<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp" >

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/item_scheduler_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_scheduler_tv_label_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="실제 실행 : " />

            <TextView
                android:id="@+id/item_scheduler_tv_date_real"
                android:layout_toEndOf="@+id/item_scheduler_tv_label_real"
                android:layout_toRightOf="@+id/item_scheduler_tv_label_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                tools:text="2021-01-04" />

            <TextView
                android:id="@+id/item_scheduler_tv_time_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/item_scheduler_tv_date_real"
                android:layout_toRightOf="@+id/item_scheduler_tv_date_real"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                tools:text="14:31:17" />

            <TextView
                android:id="@+id/item_scheduler_tv_status"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="처리완료" />

            <TextView
                android:id="@+id/item_scheduler_tv_label_pre"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/item_scheduler_tv_label_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="예상 실행 : " />

            <TextView
                android:id="@+id/item_scheduler_tv_date_pre"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/item_scheduler_tv_date_real"
                android:layout_toEndOf="@+id/item_scheduler_tv_label_pre"
                android:layout_toRightOf="@+id/item_scheduler_tv_label_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="2021-01-04" />

            <TextView
                android:id="@+id/item_scheduler_tv_time_pre"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/item_scheduler_tv_time_real"
                android:layout_toEndOf="@+id/item_scheduler_tv_date_pre"
                android:layout_toRightOf="@+id/item_scheduler_tv_date_pre"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="14:31:17" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_scheduler_tv_account"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="에넥스텔레콤" />

        <TextView
            android:id="@+id/item_scheduler_tv_service"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="MVNO 자동충전 서비스" />

    </LinearLayout>

</androidx.cardview.widget.CardView>